<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Define an action for the estate.property model -->
    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Estate Properties</field>
        <field name="res_model">estate_property</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_create">
                Click to create a new property.
            </p>
        </field>
    </record>

    <!-- Define a menu root for Estate Management -->
    <menuitem id="menu_estate_root" name="Estate Management" sequence="1"/>

    <!-- Add a menu item for estate.property under Estate Management -->
    <menuitem id="menu_estate_property" name="Properties"
              parent="menu_estate_root"
              action="action_estate_property"
              sequence="10"/>
</odoo>
